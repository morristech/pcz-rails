= form_for @tournament, html: {class:'ui form'} do |f|
  - if @tournament.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tournament.errors.count, "error")} prohibited this tournament from being saved:"
      %ul
        - @tournament.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.file_field :image
  .field
    = f.label :venue
    = f.text_field :venue
  .field
    = f.label :date
    = f.datetime_select :date  
  .field
    = f.label :registration_deadline
    = f.datetime_select :registration_deadline
  .field
    = f.label :more_information
    = f.cktext_area :more_information, :class => 'ckeditor'
  .actions
    = f.submit 'Save'
