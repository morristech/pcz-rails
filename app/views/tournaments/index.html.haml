%h3 Listing tournaments

%table
  %thead
    %tr
      %th Name
      %th Venue
      %th Date
      %th Registration deadline
      %th More information
      %th
      %th
      %th

  %tbody
    - @tournaments.each do |tournament|
      %tr
        %td= tournament.name
        %td= tournament.venue
        %td= tournament.date unless tournament.registration_deadline - Time.now < 0
        %td= tournament.registration_deadline
        %td= tournament.more_information.html_safe
        %td= link_to 'Show', tournament
        %td= link_to 'Edit', edit_tournament_path(tournament)
        %td= link_to 'Destroy', tournament, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Tournament', new_tournament_path
