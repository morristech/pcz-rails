.ui.container
  -if flash[:notice]
    .ui.message
      %i.info.circle.icon
      %p#notice= flash[:notice]

  .ui.contanier.segment
    %h3
      = @post.title
    .postcontent
      = @post.content.html_safe

  -if admin_signed_in?
    = link_to 'Edit', edit_post_path(@post)
    \|
    = link_to 'Back', posts_path
  -else
    %i.angle.double.left.icon
    = link_to 'Back', posts_path
