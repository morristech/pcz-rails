= form_for(@post, multipart: true, html: { class: 'ui form'}) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :content
    = f.cktext_area :content, :class => 'ckeditor'
  .actions
    = f.submit 'Save', class:'ui submit button'
