= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fideid
    = f.text_field :fideid
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :k
    = f.number_field :k
  .field
    = f.label :rapid
    = f.number_field :rapid
  .field
    = f.label :blitz
    = f.number_field :blitz
  .field
    = f.label :birthday
    = f.number_field :birthday
  .actions
    = f.submit 'Save'
